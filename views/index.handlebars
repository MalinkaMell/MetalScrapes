{{!-- Navbar --}}
{{> navbar}}
<section class="main">
  <div class="container-fluid">
    <div class="row page vh-100 d-flex justify-content-center align-items-center flex-column bg-dark">
      {{#unless last}}
      <h1 class="display-4 text-center my-5" id="title">No articles yet</h1>
      {{/unless}}
      <ul class="list-inline spinners">
        <li class="list-inline-item">
          <h1 class="" id="scraping-msg"></h1>
        </li>
        <li class="list-inline-item">
          <div class="spinner-grow spinner-grow-sm text-white" role="status"></div>
        </li>
        <li class="list-inline-item">
          <div class="spinner-grow spinner-grow-sm text-white" role="status"></div>
        </li>
        <li class="list-inline-item">
          <div class="spinner-grow spinner-grow-sm text-white" role="status"></div>
        </li>
      </ul>
      {{#if last}}
      <h1 class="display-4 text-center my-5" id="title">In spotlight!</h1>
      <div class="col-auto main-article">
        <div class="card spotlight mb-3">
          <div class="row no-gutters">
            <div class="col-md-6">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline">
                  <h5 class="card-title"><a href="{{last.link}}" target="_blank">{{last.title}}</a></h5>
                  <a href="#" class="btn btn-indigo-dark m-1 favorites" data-id="{{last._id}}"><i
                      class="fas fa-heart"></i></a>
                </div>
                <p class="card-text">Category: <a class="link-light" href="{{last.categoryLink}}"
                    target="_blank">{{last.category}}</a class="link-light"></p>
                <hr>
                <p class="card-text">{{last.summary}} <span class="small"><a href="{{last.link}}" target="_blank"
                      class="m-1 link-light">Read
                      More...</a></span></p>
                <hr>
                <p class="card-text"><small class="text-muted"><b>Created on:</b> {{last.scraped}}</small></p>
              </div>
            </div>
            <div class="col-md-6">
              <img src="{{last.imageLink}}" class="card-img rounded-0 p-2" alt="{{last.title}}">
            </div>
          </div>
        </div>
      </div>
      {{/if}}

    </div>
  </div>
</section>

<section class="articles">
  <div class="container pt-5">
    <div class="row d-flex justify-content-center">
      <div class="col-10">
        {{#each data}}
        <div class="card mb-3 regular">
          <div class="row no-gutters justify-content-start align-items-center">
            <div class="col-md-3">
              <img src="{{imageLink}}" class="card-img p-2" alt="{{title}}">
            </div>
            <div class="col-md-9">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline">
                  <h6 class="card-title"><a href="{{link}}" target="_blank">{{title}}</a></h6>
                  <a href="#" class="btn btn-indigo-dark m-1 favorites" data-id="{{_id}}"><i
                      class="fas fa-heart"></i></a>
                </div>
                <div class="d-flex justify-content-between">
                  <small>Category:</b> <span class="date"><a class="link-light" href="{{last.categoryLink}}"
                        target="_blank">{{category}}</a></span></small>
                  <small>Created on:</b> <span class="date">{{scraped}}</span></small>
                </div>

                <hr>
                <p class="card-text">{{summary}}
                  <span class="small"><a href="{{link}}" target="_blank" class="m-1 link-light">Read More...</a></span>
                </p>

              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

    </div>


  </div>
</section>


<footer class="w-100 text-center">Made for UOA Bootcamp, Week-18, December 2019</footer>

{{> modal}}